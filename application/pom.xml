        <artifactId>codbex-hades-parent</artifactId>
        <version>0.63.0</version>
        <relativePath>../pom.xml</relativePath>
    </parent>

	<name>codbex - hades - application</name>
	<artifactId>codbex-hades-application</artifactId>
	<packaging>jar</packaging>

